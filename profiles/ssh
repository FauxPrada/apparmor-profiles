# AppArmor profile for ssh
# Version of ssh (openssh) profiled: 8.1
# Homepage: https://gitlab.com/krathalan/apparmor-profiles
# Copyright 2019 (C) krathalan; Licensed under GPLv3

#include <tunables/global>

profile ssh /usr/bin/ssh {
  #include <abstractions/base>
  #include <abstractions/krathalans-hardening>
  #include <abstractions/perl>

  # Executables
  /usr/bin/dash mrix,
  /usr/bin/env r,
  /usr/bin/ssh r,

  # Mosh
  /usr/bin/mosh rPx,
  signal send set=hup peer=mosh,

  # Networking
  #include <abstractions/krathalans-networking>
  /etc/{passwd,protocols,services} r,
  /etc/ssh/ssh_config r,

  # SSH keys
  owner @{HOME}/.ssh/ rw,
  owner @{HOME}/.ssh/* r,

  # Needed for ssh to prompt you for your key as well as to establish the
  # authenticity of new hosts
  /dev/tty rw,

  # Needed to record authenticity of new hosts
  owner @{HOME}/.ssh/known_hosts rw,

  # Silence unnecessary permissions
  deny @{PROC}/@{pid}/fd/ r,
}
