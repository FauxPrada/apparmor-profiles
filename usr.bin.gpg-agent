# AppArmor profile for gpg-agent
# Version of gpg-agent (gnupg) profiled: 2.2.17
# Homepage: https://gitlab.com/krathalan/apparmor-profiles
# Copyright 2019 (C) krathalan; Licensed under GPLv3

#include <tunables/global>

profile gpg-agent /usr/bin/gpg-agent {
  #include <abstractions/base>

  # Process info
  @{PROC}/@{pid}/** r,

  # Pinentry
  #include <abstractions/fonts>
  #include <abstractions/gnome>
  /usr/bin/pinentry* rix,

  # Themes and icons
  @{system_share_dirs}/gtk-2.0/gtkrc r,
  @{system_share_dirs}/icons/** r,
  owner @{HOME}/.gtkrc-2.0 r,
  owner @{user_share_dirs}/icons/** r,

  # Access user keys
  owner @{HOME}/.gnupg/** rw,

  # Miscellaneous
  /usr/bin/dash rix,
  @{system_share_dirs}/mime/** r,
  owner @{user_share_dirs}/mime/** r,

  # Silence unnecessary permissions
  deny @{system_share_dirs}/fonts/** w,
  deny @{system_share_dirs}/pixmaps/** r,
  deny /var/cache/** w,
  deny @{HOME}/.cache/fontconfig/** rwk,
}
